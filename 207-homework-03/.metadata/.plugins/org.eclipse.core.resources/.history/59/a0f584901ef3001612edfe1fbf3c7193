
public class Problem2 {


	public static double fastExp(int x, int y){
		int x_pow = x;
		int y_pow = y;
		double ret;
				
		if (y % 2 == 0){
			if (y == 0){
				return 1;
			}
			if (y_pow == 0){
				return x_pow;
			}
			if ((y / 2) == 1){
				return (x * x);
			}
			if ((y / 2) == -1){
				ret = (1 / (x * x));
				return ret;
			}
			if (y < 0){
				//x_pow = (x_pow * x);
				return 1 / (x * fastExp(x, -(y_pow + 1)));
			}
			else {
				x_pow = (x_pow * x);
				return x_pow * fastExp(x, (y_pow - 1));
			}
		}
		else{
			if (y == 1){
				return x;
			}
			else{
				x_pow = (x_pow * x);
				return x_pow * fastExp(x, (y_pow - 1));
				}
			
			}
		}
	
	public static void main(String[] args) {
		System.out.println (fastExp(2, -2));
	}
}

