
public class Problem2 {


	public static long fastExp(int x, int y){
		if (y % 2 == 0){
			if ((y / 2) == 1){
				return (x * x);
			}
			else {
				return x * fastExp(x, (y - 1));
			}
		}
		else{
			long x_pow = x;
			if(y == 1 || y == -1){
				return x_pow;
			}
			else{
				x_pow = (x_pow * x);
				return x_pow * fastExp(x, (y - 1));
			}
		}
		
	}
	
	public static void main(String[] args) {
		System.out.println (fastExp(2, -1));
	}
}

